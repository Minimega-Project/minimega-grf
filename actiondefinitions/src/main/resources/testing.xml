<ActionDefinitions>
    <OnActions>
        <EnteredNamedArea>
            <Trigger>
                <Always/>
            </Trigger>
            <Effects>
                <Log>
                    At the top of this pyramid there is a Beacon.
                    Press [A] to learn more about Beacons.
                    Press [B] if you already know about beacons.
                </Log>
                <PopulateAllContainersInsideOfNamedArea/>
                <DialogSequence>
                    <Dialog>
                        At this top of this pyramid there is a Beacon.
                    </Dialog>
                    <Delay/>
                    <AppendToDialog>
                        Press [A] to learn more about Beacons.
                        Press [B] if you already know about beacons.
                    </AppendToDialog>
                    <ProceedCancel>
                        <Proceed></Proceed> <!-- Can also be absent if empty -->
                        <Cancel>
                            <Log>
                                Exiting dialog sequencen

                            </Log>
                            <ExitDialogSequence/>
                        </Cancel>
                    </ProceedCancel>
                    <Dialog>
                        This a new dialog box, replacing the old dialog
                    </Dialog>
                </DialogSequence>
                <DialogSequence>
                    <Log>HELLO</Log>
                    <Delay/>
                    <Log>DELAYED TEXT</Log>
                    <Delay/>
                    <Log>DELAYED TEXT 2</Log>
                    <Delay/>
                    <ExitDialogSequence/>
                    <Log>DELAYED TEXT 3</Log>
                </DialogSequence>
                <Log>End of main</Log>
            </Effects>
        </EnteredNamedArea>
    </OnActions>
</ActionDefinitions>